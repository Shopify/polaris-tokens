{
  "javascript.validate.enable": false,
  "css.validate": false,
  "scss.validate": false,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/node_modules": true,
    ".{bundle,dev,shadowenv.d}": true,
    "{tmp,dist-modern}/": true
  },
  "search.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/node_modules": true,
    "{tmp,dist-modern}/": true
  }
}
